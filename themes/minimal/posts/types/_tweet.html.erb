<div class="date">
  <span class="month"><%= post.created_at.strftime('%b') -%></span>
  <span class="day"><%= post.created_at.strftime('%e') -%></span>
</div>

  <% cache(post.permalink) do -%>
  <%= twitterize(post.content) %>
  <% end -%>

  <%- if logged_in? -%>
  <%= link_to 'Delete', post_path(post.id), :method => :delete, :confirm => "Click OK to delete this post." %>
  <%- end -%>
